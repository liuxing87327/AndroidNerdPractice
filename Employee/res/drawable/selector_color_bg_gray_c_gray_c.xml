            <gradient android:endColor="#f3f3f3" android:startColor="#f3f3f3" />

            <padding android:left="0dp" android:right="0dp" />

            <stroke android:width="1dp" android:color="@color/j_lightgray" />
        </shape></item> <!-- default -->
    <item><shape>
            <corners android:radius="2dp" />

            <stroke android:width="1dp" android:color="@color/j_lightgray" />

            <padding android:left="0dp" android:right="0dp" />

            <gradient android:endColor="#f3f3f3" android:startColor="#f3f3f3" />
        </shape></item> <!-- default -->

</selector>